@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Well Drilling</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="~/js/script.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div style="min-height: 100vh; display: flex; align-items: center">
        <form style="width: 40%; margin: 0 auto;">
            <div class="mb-3">
                <label for="useremail" class="form-label">Адрес электронной почты</label>
                <input type="email" class="form-control" id="useremail" placeholder="Введите электронную почту">
                <div id="useremail-error" class="invalid-feedback"></div>
            </div>
            <div class="mb-3">
                <label for="userlastname" class="form-label">Фамилия</label>
                <input type="email" class="form-control" id="userlastname" placeholder="Введите свою фамилию">
                <div id="userlastname-error" class="invalid-feedback"></div>
            </div>
            <div class="mb-3">
                <label for="userfirstname" class="form-label">Имя</label>
                <input type="email" class="form-control" id="userfirstname" placeholder="Введите своё имя">
                <div id="userfirstname-error" class="invalid-feedback"></div>
            </div>
            <div class="mb-3">
                <label for="userpassword" class="form-label">Пароль</label>
                <input type="password" class="form-control" id="userpassword" placeholder="Введите пароль">
                <div id="userpassword-error" class="invalid-feedback"></div>
            </div>
            <div class="mb-3">
                <label for="userreppassword" class="form-label">Подтверждение пароля</label>
                <input type="password" class="form-control" id="userreppassword" placeholder="Введите пароль">
                <div id="userreppassword-error" class="invalid-feedback"></div>
            </div>
            <input type="button" class="btn btn-primary" value="Продолжить" onclick="Register()" />
            <a href="/Access/Authorization" class="link-secondary">Аккаунт уже существует?</a>
        </form>
    </div>
</body>
</html>